<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.TickTock.Toolbar</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/TickTock.TextView</item>

        <!-- Let's be real, no one wants this by default -->
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="TickTock" parent="Base" />

    <style name="TimerText">
        <item name="android:textSize">80sp</item>
        <item name="fontFamily">@font/open_sans_extrabold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivityLabel">
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ActivityDivider">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="TickTock.TextView" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TickTock.TextAppearance</item>
    </style>

    <style name="TickTock.TextAppearance" parent="TextAppearance.AppCompat">
        <!-- Defaults for anything unstyled, but appcompat text styles won't catch this -->
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="TickTock.Toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <!-- Force icons and title text to be all the same color -->
        <item name="colorControlNormal">?android:attr/textColorPrimary</item>
        <item name="android:textColorSecondary">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.TickTock.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.TickTock.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.TickTock.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

</resources>