<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="colorPrimary">#7008ff</color>
    <color name="colorPrimaryDark">#4B01B1</color>
    <color name="colorAccent">#FFFFFF</color>

    <color name="colorText">#a4a4a9</color>

    <style name="TimerText">
        <item name="android:textSize">80sp</item>
        <item name="fontFamily">@font/open_sans_extrabold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivityLabel">
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ActivityDivider">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:layout_height">1dp</item>
    </style>

</resources>